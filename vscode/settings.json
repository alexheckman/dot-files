{
    "vim.easymotion": false,
    "vim.sneak": false,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "bookmarks.list"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "w"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "workbench.startupEditor": "none",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "go.formatTool": "goimports",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "go.autocompleteUnimportedPackages": true,
    "go.useLanguageServer": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        "editor.snippetSuggestions": "none",
    },
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.wordBasedSuggestions": false,
        "editor.tabSize": 2
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "gopls": {
        "ui.diagnostic.staticcheck": false,
        "ui.completion.usePlaceholders": true,
        "ui.diagnostic.analyses": {},
        "build.buildFlags": []
    },
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.blame.highlight.locations": [
        "gutter",
        "overview"
    ],
    "gitlens.currentLine.enabled": false,
    "gitlens.blame.highlight.enabled": false,
    "workbench.colorTheme": "Monokai Dimmed",
    "editor.fontSize": 14,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.iconTheme": "vscode-icons",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "search.exclude": {
        "**/cmd/scripts/": true,
        "**/scripts/": true
    },
    "search.collapseResults": "alwaysCollapse",
    "explorer.confirmDelete": false,
    "editor.fontFamily": "SourceCodePro-Regular, SourceCodePro-Medium, SourceCodePro-Light, SourceCodePro-ExtraLight, Menlo, Monaco, 'Courier New', monospace",
    "debug.console.fontSize": 13,
    "terminal.integrated.fontSize": 13,
    "gitlens.mode.active": "zen",
    "gitlens.blame.format": "${date|10} ${author|13-}: ${message|30?}",
    "gitlens.defaultDateFormat": "YYYY/MM/DD",
    "gitlens.hovers.annotations.over": "annotation",
    "gitlens.hovers.changesDiff": "hunk",
    "editor.hover.delay": 200,
    "workbench.editor.wrapTabs": true,
    "gitlens.blame.avatars": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "go.toolsManagement.autoUpdate": true,
    "json.format.enable": false,
    "Notes.notesLocation": "/Users/aheckman/vscode-notes",
    "markdown-pdf.format": "Tabloid",
    "terminal.integrated.tabs.enabled": true,
    "redhat.telemetry.enabled": false,
    "explorer.confirmDragAndDrop": false
}
